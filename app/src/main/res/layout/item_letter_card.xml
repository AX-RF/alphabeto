<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/letter_card_corner_radius"
    app:cardElevation="6dp"
    app:strokeColor="@color/divider_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minHeight="@dimen/letter_card_size"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <TextView
            android:id="@+id/letterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="@color/letter_shadow"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:textColor="@color/text_primary"
            android:textSize="48sp"
            tools:text="A" />

        <TextView
            android:id="@+id/completionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            tools:text="Completed" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
